@page "/holiday/create"
@page "/holiday/edit/{id}"

@inherits CreateEditBase

<h1>Holiday</h1>

<Alert ref="messageAlert"></Alert>

<div>
    <div class="form-group">
        <label for="name">Name</label>
        <input class="form-control" bind="@holidayEditModel.Name" />
    </div>

    <div class="form-group">
        <label for="name">Description</label>
        <input class="form-control" bind="@holidayEditModel.Description" />
    </div>

    <div class="form-group">
        <label for="name">Date</label>
        <input class="form-control" bind="@holidayEditModel.Date" />
    </div>

    <button class="btn btn-primary" onclick="@AddHoliday">Save</button>
</div>


