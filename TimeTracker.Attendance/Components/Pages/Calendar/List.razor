@page "/calendar/list"

@inherits ListBase

<h1>Calendar</h1>

@if (calendars != null && calendars.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Home offices</th>
                <th>Vacations</th>
                <th>Sick days</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var calendar in calendars)
            {
                <tr>
                    <td>@calendar.Name</td>
                    <td>@calendar.HomeOfficeCapacity</td>
                    <td>@calendar.VacationCapacity</td>
                    <td>@calendar.SickDaysCapacity</td>
                </tr>
            }
        </tbody>
    </table>
}
